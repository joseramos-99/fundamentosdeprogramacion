#include <iostream>

  using namespace std;
   int main()
  { 
    int i, n, factorial;
    // validar las entradas
    cout << "dame el valor de n: ";
    cin  >> n;
    factorial=1; //acumulador del producto
    i=1;
    while (i <= n){
    factorial = factorial*i;
    i=i+1;
  } 
  cout<<"el factorial de "<< n << " es "<<factorial<< endl; 
      
        return 0;
      }
