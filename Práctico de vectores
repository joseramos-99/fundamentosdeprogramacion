1.-
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño del vector: ";
    cin >> n;
    vector<float> A(n), B(n), C(n);
    cout << "Ingrese los elementos del vector A:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    cout << "Ingrese los elementos del vector B:\n";
    for (int i = 0; i < n; i++) cin >> B[i];

    for (int i = 0; i < n; i++) C[i] = A[i] + B[i];

    cout << "La suma de los vectores es:\n";
    for (float x : C) cout << x << " ";
    return 0;
}
2.-
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño del vector: ";
    cin >> n;
    vector<float> A(n), B(n), C(n);
    cout << "Ingrese los elementos de A:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    cout << "Ingrese los elementos de B:\n";
    for (int i = 0; i < n; i++) cin >> B[i];

    for (int i = 0; i < n; i++) C[i] = A[i] - B[i];

    cout << "La resta de los vectores es:\n";
    for (float x : C) cout << x << " ";
    return 0;
}
3.-
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño de los vectores: ";
    cin >> n;
    vector<float> A(n), B(n);
    cout << "Ingrese los elementos de A:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    cout << "Ingrese los elementos de B:\n";
    for (int i = 0; i < n; i++) cin >> B[i];

    float producto = 0;
    for (int i = 0; i < n; i++) producto += A[i] * B[i];

    cout << "El producto escalar es: " << producto;
    return 0;
}
4.-
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    float esc;
    cout << "Ingrese el tamaño del vector: ";
    cin >> n;
    vector<float> A(n), C(n);
    cout << "Ingrese los elementos de A:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    cout << "Ingrese el escalar: ";
    cin >> esc;

    for (int i = 0; i < n; i++) C[i] = A[i] * esc;

    cout << "El vector resultante es:\n";
    for (float x : C) cout << x << " ";
    return 0;
}
5.-
#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño del vector: ";
    cin >> n;
    vector<float> A(n);
    cout << "Ingrese los elementos:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    float suma = 0;
    for (float x : A) suma += x * x;
    cout << "La magnitud del vector es: " << sqrt(suma);
    return 0;
}
6.-
#include <iostream>
#include <vector>
#include <cmath>
using namespace std;

int main() {
    int n;
    cout << "Ingrese el tamaño del vector: ";
    cin >> n;
    vector<float> A(n), U(n);
    cout << "Ingrese los elementos del vector:\n";
    for (int i = 0; i < n; i++) cin >> A[i];
    float suma = 0;
    for (float x : A) suma += x * x;
    float mag = sqrt(suma);
    for (int i = 0; i < n; i++) U[i] = A[i] / mag;
    cout << "El vector unitario es:\n";
    for (float x : U) cout << x << " ";
    return 0;
}
